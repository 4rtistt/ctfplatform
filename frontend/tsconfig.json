{
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": ["dom", "es2016", "es2017.object", "es2019"],
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,  // https://github.com/mobxjs/mobx-state-tree/issues/1208
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "@styles/*": ["styles/*"],
            "@store/*": ["store/*"],
            "@models/*": ["models/*"],
            "@consts/*": ["consts/*"],
            "@components/*": ["components/*"],
            "@containers/*": ["containers/*"],
            "@libs/*": ["libs/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ]
}
